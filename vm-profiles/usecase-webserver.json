{
  "name": "web-application-server",
  "description": "Web server for hosting applications (nginx, Apache, Node.js, etc.)",
  "_comment": "Optimized for web serving with network performance and stability",
  "_use_case": "Web applications, API servers, reverse proxies",
  "_recommended_for": ["Nginx", "Apache", "Node.js", "Django", "Flask", "Rails", "PHP"],
  "_detection_notes": {
    "vcpus": "25-40% of host cores (min 2)",
    "memory_mb": "2-4GB per vCPU depending on application",
    "disk_gb": "40GB for application, logs, and assets",
    "disk_format": "raw for production consistency",
    "network_mode": "bridge for direct network access"
  },
  "os": "linux",
  "cpus": "AUTO_DETECT",
  "memory_mb": "AUTO_DETECT",
  "disk_gb": 40,
  "disk_format": "raw",
  "network": {
    "mode": "bridge",
    "bridge": "AUTO_DETECT"
  },
  "features": {
    "hugepages": false,
    "vhost_net": true,
    "memballoon": true,
    "autostart": true,
    "cpu_pinning": false
  },
  "display": {
    "type": "none",
    "headless": true
  },
  "storage": {
    "cache": "writethrough",
    "io": "native"
  },
  "limits": {
    "cpu_quota_percent": 300,
    "memory_max_mb": 8192
  }
}
