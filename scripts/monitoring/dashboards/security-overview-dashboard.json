{
  "dashboard": {
    "id": null,
    "uid": "security-overview",
    "title": "Security Overview Dashboard",
    "tags": ["security", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "id": 1,
        "type": "stat",
        "title": "Security Score",
        "targets": [
          {
            "expr": "system_security_score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "green", "value": 80}
              ]
            },
            "unit": "percent",
            "max": 100,
            "min": 0
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "id": 2,
        "type": "stat",
        "title": "Active Incidents",
        "targets": [
          {
            "expr": "sum(security_active_incidents)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "id": 3,
        "type": "stat",
        "title": "High Risk Containers",
        "targets": [
          {
            "expr": "count(container_risk_score > 75)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "id": 4,
        "type": "stat",
        "title": "Blocked IPs",
        "targets": [
          {
            "expr": "sum(rate(security_blocked_ips_total[24h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "id": 5,
        "type": "graph",
        "title": "Security Events Timeline",
        "targets": [
          {
            "expr": "sum by (event_type) (rate(security_events_total[5m]))",
            "legendFormat": "{{event_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "id": 6,
        "type": "graph",
        "title": "SSH Login Attempts",
        "targets": [
          {
            "expr": "sum by (result) (rate(ssh_login_attempts_total[5m]))",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Attempts/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "id": 7,
        "type": "table",
        "title": "Container Security Status",
        "targets": [
          {
            "expr": "container_risk_score",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "color-background",
              "filterable": true
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 75}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "container_name"},
              "properties": [
                {
                  "id": "displayName",
                  "value": "Container"
                }
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "displayName",
                  "value": "Risk Score"
                },
                {
                  "id": "unit",
                  "value": "percent"
                }
              ]
            }
          ]
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "id": 8,
        "type": "piechart",
        "title": "Vulnerabilities by Severity",
        "targets": [
          {
            "expr": "sum by (severity) (container_vulnerabilities_total)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"],
          "legendDisplayMode": "list",
          "legendPlacement": "right"
        }
      },
      {
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 20},
        "id": 9,
        "type": "graph",
        "title": "Network Connections",
        "targets": [
          {
            "expr": "sum by (state) (security_network_connections)",
            "legendFormat": "{{state}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "id": 10,
        "type": "heatmap",
        "title": "Incident Response Times",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(security_incident_response_seconds_bucket[5m])) by (le, incident_type))",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "dataFormat": "timeseries",
        "options": {
          "calculate": true,
          "calculation": {
            "xBuckets": {
              "mode": "count",
              "value": "10"
            },
            "yBuckets": {
              "mode": "count",
              "scale": {
                "type": "linear"
              }
            }
          },
          "color": {
            "mode": "spectrum",
            "scheme": "Blues"
          }
        }
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "id": 11,
        "type": "alertlist",
        "title": "Active Security Alerts",
        "options": {
          "showOptions": "current",
          "maxItems": 10,
          "sortOrder": 1,
          "dashboardAlerts": false,
          "alertName": "",
          "dashboardTitle": "",
          "tags": ["security"],
          "stateFilter": {
            "ok": false,
            "paused": false,
            "no_data": false,
            "exec_error": false,
            "alerting": true,
            "pending": true
          }
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  }
}